<h1><%= Task.model_name.human %> <%= t :list %></h1>

<% if @tasks.count > 0 %>
<table>
  <thead>
    <tr>
      <th><%=Task.human_attribute_name :content %></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <% if task.finished %>
          <td>
            <strike><%= link_to task.content, task %></strike>
            <%=link_to "[x]", task_url(task), { method: :delete, class: :cmd, data: { confirm: "本当に削除しますか？" }} %>
          </td>
        <% else %>
          <td><%= link_to task.content, task %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
  <p><%= t(".register_task") %></p>
<% end %>
<br>

<%= link_to t(:create), new_task_path, class: "btn-square" %>
